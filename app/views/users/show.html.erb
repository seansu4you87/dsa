<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>Articles</h2>

<% @user.articles.each do |article| %>
  <%= render article %>
  <br />
<% end %>

<%= link_to 'Add Article', new_article_path %>

<br /><br />

<h2>Posts</h2>

<% @user.posts.each do |post| %>
  <%= render post %>
  <br />
<% end %>

<%= link_to 'Add Post', new_post_path %>

<br /><br />

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
