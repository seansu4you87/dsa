<div class="article">
  <p><h3 class="title"><%= article.title %></h3><span class="byline"> by <%= link_to User.find(article.user_id).name, User.find(article.user_id) %></span></p>
  <p><%= article.body.html_safe %></p>
  <p><strong>homepage: </strong><%= article.homepage %></p>
  <%= render :partial => 'categories/category_links', :locals => {:categories => article.categories} %>
  <%= link_to 'Show', article %>
  <%= link_to 'Edit', edit_article_path(article) %>
  <%= link_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %>
</div>