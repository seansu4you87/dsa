      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :private %><br />
    <%= f.check_box :private %>
  </div>
  <div class="field">
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </div>
  <div class="field">
    <%= f.label :homepage %><br />
    <%= f.check_box :homepage %>
  </div>
  <div class="field">
    <%= f.label :categories %><br />
    <%= f.text_area :categories, :rows => 5, :value => category_string_from_categories(@article.categories) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
