<fieldset>
  <h1><%= category.name %></h1>
  <p><strong>Articles: </strong><%= category.articles == nil ? 0 : category.articles.count %></p>
  <p><strong>Photos: </strong><%= category.photos == nil ? 0 : category.photos.count %></p>
  <%= link_to 'Show', category %>
  <%= link_to 'Edit', edit_category_path(category) %>
  <%= link_to 'Destroy', category, confirm: 'Are you sure?', method: :delete %>
</fieldset>