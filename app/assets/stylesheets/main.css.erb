body	{
	background:url(<%= asset_path "main_bg.jpg" %>) repeat-x #000;
	margin:0;
	padding:0;
	font-family:Helvetica;
	line-height:150%;
}

#wrapper	{
	width:960px;
	margin:0 auto;
	position:relative;
}

#header	{
	height:162px;
}

#header ul	{
	margin:0;
	padding:0;
	list-style:none;
	float:right;
	width:700px;
	margin-top:111px;
}
	#header ul li	{
		float:right;
		padding:0 40px;
	}
	#header ul li:first-child	{
		padding-right:0;
	}
		#header ul li a	{
			height:35px;
			text-decoration:none;
			font-size:21px;
			color:#eee7d8;
			display:block;
			padding-top:15px;
			font-weight:100;
		}
			#header ul li a:hover	{
				color:#fff;
			}
			#header ul li .current	{
				height:35px;
				text-decoration:none;
				font-size:21px;
				color:#fff;
				display:block;
				padding-top:15px;
				font-weight:100;
			}
	#header #login	{
		background:#232220;
		padding:10px 20px;
		color:#aaa;
		position:absolute;
		top:0;
		right:0px;
		font-size: 13px;
		font-weight: 100;

		-moz-border-radius:0px 0px 7px 7px;  
		-webkit-border-radius:0px 0px 7px 7px;  
		border-radius:0px 0px 7px 7px;  
	}
		#header #login a	{
			color:#aaa;
			text-decoration:none;
		}
		#header #login .current	{
			color:#fff;
		}
		#header #login.form	{
			cursor:default;
		}
			#header #login.form label	{
				width:70px;
				text-align:right;
				display:block;
				float:left;
			}
			#header #login.form input	{
				background:#666;
				color:#fff;
				border:1px solid #000;
				padding:5px 3px;
				width:110px;
				margin-right:15px;
				margin-left:5px;
				margin-bottom:5px;
				
				border-radius:3px;
				-moz-border-radius:3px;
				-webkit-border-radius:3px;
			}
				#header #login.form input.submit	{
					background:#000;
					margin:0;
					margin-left:79px;
					cursor:pointer;
				}


#logo	{
	position:absolute;
	top:10px;
	left:0;
	margin:0;
	z-index: 1200;
}

	#logo a	{
		display:block;
		width:220px;
		height:220px;
		text-indent:-9999px;
		background:url(<%= asset_path 'logo.png' %>) no-repeat 0 0;
	}
	
#member_nav	{
	background:#222;
}	
	#member_nav ul	{
		margin:0;
		padding:0;
	}
		#member_nav ul li	{
			float:right;
			list-style:none;
		}
			#member_nav ul li a	{
				color: #555;
				display: block;
				font-size: 14px;
				padding: 7px 10px;
				text-decoration: none;
				font-weight:100;
			}

#content	{
	background:#eee7d8;
	box-shadow:0 7px 6px #000;
	font-family:Georgia;
	color:#3a3a3a;
}
	
#slideshow	{
	height:300px;
	margin-bottom:35px;
}

#footer	{
	border-top:1px solid #c1ab69;
	background:#9a864a;
	padding:20px 0;
	z-index:1000;
	position:relative;
	color:#6e6035;
	font-size:13px;
	
	box-shadow:0 0 3px rgba(0,0,0,.5);
	-moz-box-shadow:0 0 3px rgba(0,0,0,.5);
	-webkit-box-shadow:0 0 3px rgba(0,0,0,.5);
}

#footer_container	{
	width:960px;
	margin:0 auto;
	position:relative;
}

.social_media	{
	float:right;
	position:relative;
}
.fb	{
	display:block;
	height:48px;
	width:48px;
	background:url(<%= asset_path "fb_icon.png" %>) no-repeat;
	text-indent:-9999px;
	position:absolute;
	top:-12px;
	right:4px;
}

#login h1{
    color:#FFF;
}

.wt-rotator	{
	border:0;
}
#content h1.slideshow_title	{
	color:#fff;
}

.leftCol	{
	width:580px;
	padding-left:25px;
	float:left;
	padding-bottom:50px;
}

.rightCol	{
	width:205px;
	padding:0 25px 25px;
	margin:5px 5px 0;
	background:rgba(255,255,255,.5);
	float:right;
	/*border-left:1px solid #e0d6c2;*/
}

#content h1	{
	font-size:18px;
	color:#000;
}
	
h2	{
	font-family:Helvetica;
	color:#604202;
	font-size:21px;
}
	
h3	{
	font-family:Georgia;
	color:#604202;
	font-size:14px;
}
	
.clear 	{
	clear:both;
}
	
.news	{
	font-size:13px;
	line-height:140%;
}

.meta	{
	font-style: italic;
}
	
	
/*polls*/
.field.options input	{
	clear:left;
	display:block;
	float:left;
}
.add_option, .remove_option	{
	display:block;
	float:left;
	padding:0 5px;
}
	
	
/* recent */
.news .article	{
	margin-bottom:35px;
}
.news .article h3 a, .news .article h3	{
	font-size:15px;
	font-family:Georgia;
	color:#604202;
	text-decoration:none;
	margin-bottom:15px;
}	
	.news .article h3 a:hover	{
		text-decoration:underline;
	}
	
.news .article p	{
	color:#3a3a3a;
	font-family:Georgia;
	font-size:13px;
}

.date	{
	font-style:italic;
}

/* articles */
.byline	{
	font-size:12px;
}

.title	{
	font-family:Helvetica;
	color:#604202;
	font-size:21px;
	margin-bottom:0;
}
